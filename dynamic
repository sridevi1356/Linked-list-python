class node:
    def __init__(self,val):
        self.val=val
        self.next=None
class LinkedList:
    def __init__(self):
        self.head=None
    def __createcll(self,n):
        while i<n:
            newnode=node(input("enter value"))
            if i==0:
                self.head=newnode
            else:
                t=self.head
                while t.next:
                    t=t.next
                    t.next=newnode
                i=i+1
            newnode.next=self.head.next
            
    def __show(self):
        t=self.head
        while t:
            print(t.val,end="->")
            t=t.next
            ch=input("enter okay:")
            if ch=='okay':
                break
obj=LinkedList()
